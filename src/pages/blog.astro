---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import '../styles/blog.css'

const { pageTitle } = Astro.props;
const blogs = await Astro.glob('../pages/blog/*.md');
---
<!doctype html>
<html lang="en">
	<head>
		<!-- Google tag (gtag.js) -->
<script async src="https://www.googletagmanager.com/gtag/js?id=G-DPHBXRB980"></script>
<script is:inline>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());

  gtag('config', 'G-DPHBXRB980');
</script>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/holisticsvf.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
		<style>
			@import url('https://fonts.googleapis.com/css2?family=Pontano+Sans:wght@300..700&display=swap');
			@import url('https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100..900;1,100..900&display=swap');
			</style>
		<title>Blog - Holistic Cancer Treatment</title>
		<meta name="description" content="Discover a comprehensive and compassionate approach to cancer care that integrates traditional and alternative therapies.">
		  <meta property="og:image" content="https://holisticancercoach.com/_astro/clinica2.CpS300DU.webp"> 
  			<meta property="og:url" content="https://holisticancercoach.com/_astro/clinica2.CpS300DU.webp"> 
  		<meta property="og:type" content="website">
	</head>
	<body>
		<Navbar />
        
          <section class="blog-section" id="blog-section">
            <div class="grid-cont">
            
              <ul class="blogs">
                {blogs.map((blog) =>
                  <li>
                    <article class="blog">          
                      <img src={blog.frontmatter.image.url} alt="blog.frontmatter.image.alt" width="100%"/>
                      <a href={blog.url} class=""><h3>{blog.frontmatter.title}</h3></a>
                      <h4>{blog.frontmatter.date}</h4>
                      <p>{blog.frontmatter.description}</p>
          
                    </article>            
                  </li>
                )}
              </ul>
            </div>
          </section>
        <Footer />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>