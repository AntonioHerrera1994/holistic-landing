<div class="pricing-container">
  <div class="header-section">
    <h1 class="main-title">Odontología Holística a Precios Accesibles en Tijuana, México</h1>
    <p class="subtitle">Ahorra hasta 66% en procedimientos dentales con calidad de clase mundial</p>
  </div>

  <div class="pagination-controls top-controls">
    <button class="nav-button prev-button" id="prevBtn" disabled>
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
        <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
      <span>Anterior</span>
    </button>
    
    <div class="page-indicator">
      <span class="current-page">1</span>
      <span class="separator">/</span>
      <span class="total-pages">6</span>
    </div>
    
    <button class="nav-button next-button" id="nextBtn">
      <span>Siguiente</span>
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
        <path d="M9 18L15 12L9 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    </button>
  </div>

  <div class="pricing-grid" id="pricingGrid">
    {procedures.map((procedure, index) => (
      <div 
        class="pricing-card" 
        data-index={index}
        style={`animation-delay: ${(index % 2) * 0.15}s`}
      >
        <div class="card-icon"></div>
        
        <div class="card-content">
          <h3 class="procedure-name">{procedure.nameEs}</h3>

          
          <div class="prices-comparison">
            <div class="price-block biodental">
              <span class="price-label">Nuestro Precio</span>
              <span class="price-value">${procedure.biodental}</span>
            </div>
            
            <div class="vs-divider">
              <span>vs</span>
            </div>
            
            <div class="price-block us">
              <span class="price-label">Precio USA</span>
              <span class="price-value">${procedure.us}</span>
            </div>
          </div>
          
          <div class="savings-badge">
         
            <span class="savings-text">Ahorro ${procedure.savings}</span>
            
          </div>
        </div>
        
        <div class="card-glow"></div>
      </div>
    ))}
  </div>

  <div class="pagination-controls bottom-controls">
    <button class="nav-button prev-button" id="prevBtnBottom" disabled>
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
        <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
