---
import '../styles/services-styles/heroserv.css'
import HospitalS from '../assets/clinica2.webp'
import HospitalS2 from '../assets/img-hospital.png'
import HospitalS3 from '../assets/img3.webp'
---


<section class="servhero">
    <div class="servhgrid">
        <div class="servhcarr">
            <div class="slider-container">
                <div class="slider">
                    <div class="slide">
                        <img 
                        src={HospitalS.src}
                        width="600"
                        height="450"
                        alt="hospital"
                        />
                    </div>
                    <div class="slide">
                        <img 
                        src={HospitalS2.src}
                        width="600"
                        height="450"
                        alt="hospital"
                        />
                    </div>
                    <div class="slide">
                        <img 
                        src={HospitalS3.src}
                        width="600"
                        height="450"
                        alt="hospital"
                        />
                    </div>
                    <!-- Puedes añadir más slides según necesites -->
                </div>
            </div>
        </div>
        <div class="servhtxt">
            <h1>Hola, estos son nuestros servicios</h1>
            <p>Hola hola hola, servicios muhcos y a buen precio jajaja aaaaa</p>
        </div>
        
    </div>
</section>

<script is:global>
document.addEventListener('DOMContentLoaded', function() {
  const slider = document.querySelector('.slider');
  const slides = document.querySelectorAll('.slide');
  const totalSlides = slides.length;
  let currentSlide = 0;
  const slideInterval = 3000;

  function goToSlide(index) {
    slider.style.transform = `translateX(-${index * 100}%)`;
  }

  function nextSlide() {
    currentSlide = (currentSlide + 1) % totalSlides;
    goToSlide(currentSlide);
  }

  let sliderTimer = setInterval(nextSlide, slideInterval);

  const sliderContainer = document.querySelector('.slider-container');
  sliderContainer.addEventListener('mouseenter', () => clearInterval(sliderTimer));
  sliderContainer.addEventListener('mouseleave', () => {
    sliderTimer = setInterval(nextSlide, slideInterval);
  });
});

</script>